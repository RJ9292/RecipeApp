<Window x:Class="RecipeApplication.ManageRecipeApplication.SelectRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Recipe" Height="450" Width="400">
    <Grid>
        <ListBox Name="lstRecipes" SelectionMode="Single" Margin="10" DisplayMemberPath="DisplayInfo"/>
        <Button Content="Select" Click="BtnSelect_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10"/>
    </Grid>
</Window>
