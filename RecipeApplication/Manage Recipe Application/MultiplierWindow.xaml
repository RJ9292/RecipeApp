<Window x:Class="RecipeApplication.ManageRecipeApplication.MultiplierWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Apply Multiplier" Height="200" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Enter Multiplier:" FontWeight="Bold"/>
            <TextBox x:Name="txtMultiplier" Margin="0,5,0,10"/>
            <Button Content="Apply Multiplier" Click="BtnApplyMultiplier_Click" Margin="0,5"/>
        </StackPanel>
    </Grid>
</Window>
