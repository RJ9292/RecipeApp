<Window x:Class="RecipeApplication.ManageRecipeApplication.SelectRecipesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Recipes" Height="450" Width="300">
	<Grid>
		<ListBox Name="lstRecipes" SelectionMode="Single" Margin="10" MouseDoubleClick="LstRecipes_MouseDoubleClick"/>
		<Button Content="Select" Click="BtnSelect_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10"/>
	</Grid>
</Window>
